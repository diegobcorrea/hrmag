@import "nib"
@import "normalize.styl"
@import "foundation.styl"

a
	text-decoration none
body
	font-family sans-serif
	font-size 16px
figure
	margin 0
img
	vertical-align top
ul
	margin 0
	padding 0

// CSS General
.noPadding 
	padding 0

#top-nav
	background-color rgba(0,0,0,1)
	color #fff
	height 42px
	position fixed
	top 0
	width 100%
	z-index 1000
	&.scrolled
		background-color rgba(0,0,0,.5)
	nav
		overflow hidden
		ul
			list-style none
			overflow hidden
			li
				float left
				overflow hidden
				a
					float left
					height 2.6em

#post-promoted
	margin-top 42px
	#image-promoted
		background-color #333
